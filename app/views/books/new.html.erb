<h2>New Book</h2>
<%= form_with model:@book, local:true do |f| %>
    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
             <li><%= message %></li>
            <% end %>
        </ul>
    <% end %>

    <%= f.label :Title %><br/>
    <%= f.text_field :title %><br/>
    <%= f.label :Opinion %><br/>
    <%= f.text_area :body %>

    <br><%= f.submit 'Create Book' %></br>
<% end %>
