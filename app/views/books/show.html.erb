<div class="container">
    <div class="row">
        <%= render partial: 'layouts/side', locals: {user: @user, newbook: @newbook } %>
        <div class="col-md-8 offset-md-1">
            <h1>Book detail</h1>

            <table class="table">
                <tbody>
                    <tr>
                        <td>
                            <%= link_to user_path(@user) do %>
                                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %><br />
                                <%= @user.name %>
                            <% end %>
                        </td>
                        <td>
                            <p>
                                <%= link_to @book.title, book_path(@book.id) %>
                            </p>
                        </td>
                        <td>
                            <p>
                                <%= @book.body %>
                            </p>
                        </td>
                        <% if @user == current_user %>
                            <td><button type="button" class="btn btn-success"><%= link_to "Edit", edit_book_path(@book), class:"text-white" %></button></td>
                            <td><button type="button" class="btn btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "Are you sure?", class:"text-white" %></button></td>
                        <% end %>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>