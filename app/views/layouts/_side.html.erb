<% if newbook.errors.any? %>
           <h2><%= newbook.errors.count %> errors prohibited this book from being saved:</h2>
            <ul>
                <% newbook.errors.full_messages.each do |message| %>
                 <li><%= message %></li>
                <% end %>
            </ul>
<% end %>

<div class="col-md-3">
  <div class="user-info">
    <h2>User Info</h2>
    <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: 'no_image.jpg', size: '100x100' %>

        <table class="table">
              <tbody>
                    <tr>
                        <th>name</th>
                        <td class="col"><%= user.name %></td>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <td class="col"><%= user.introduction %></td>
                    </tr>
              </tbody>
        </table>
        <%= link_to "", edit_user_path(user), class:"fas fa-user-cog btn btn-default btn-outline-secondary btn-lg btn-block" %>
  </div>

    <div class="new-book">
      <h2>New book</h2>

      <%= form_with model:newbook, local:true do |f| %>

        <div class="form-group">
          <%= f.label :Title %>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :Opinion %>
          <%= f.text_area :body, class:"form-control" %>
        </div><br />

          <%= f.submit 'Create Book', class:"btn btn-primary btn-lg btn-block" %>
      <% end %>
    </div>
 </div>