<div class="container">
  <div class="row">

    <%= render partial: 'layouts/side', locals: {user: @user, newbook: @newbook } %>

      <div class="col-md-8 offset-md-1">

        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tr>
            <% @books.each do |book| %>
              <tbody>
                <td>
                  <%= link_to user_path(@user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 80, 80, format: 'jpeg', fallback: "no_image.jpg", size: '40x40' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book.title, book_path(book) %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tbody>
            <% end %>
          </tr>
        </table>
      </div>
  </div>
</div>